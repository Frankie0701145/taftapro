
  <div class="container mt-2">

    <!--Personal Information-->

    <div class="d-flex flex-column justify-content-center p-3 m-3 border border-white shadow-lg">

      <div class="d-flex justify-content-between">
          <h3>Personal Information</h3>
          <button id="editPersonal" class="btn btn-info btn-sm mt-2 mb-3">Edit</button>
      </div>

      <%= form_for( @professional, url: professional_path( params[:id] ))  do |f|%>
        <!--Name-->
        <div class="row p-3">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :first_name, class: "form-control input-sm", placeholder: "First Name", :disabled=>true %>
            </div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :last_name, class: "form-control input-sm", placeholder: "Last Name", :disabled=>true %>
            </div>
          </div>
        </div>
        <!--Location-->
        <div class="row p-3">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :city, class: "form-control input-sm", placeholder: "City", :disabled=>true %>
            </div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= f.text_field :country, class: "form-control input-sm", placeholder: "Country", :disabled=>true %>
              </div>
          </div>
        </div>
        <!--Service-->
        <div class="form-group p-3">
          <%= f.text_field :service, class: "form-control input-sm", placeholder: "Service", :disabled=>true %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-success mt-2", :disabled=>true %>
        </div>
      <%end%>

      <hr>
      <div class="d-flex justify-content-between">
        <h3>Business Information</h3>
        <button id="editBusiness" class="btn btn-info btn-sm mt-2">Edit</button>
      </div>
    <!--Business Information-->
      <%= form_for(@professional, url: professional_path( params[:id])) do |f|%>

        <div class="form-group p-3">
            <%=f.text_field :business_name, class: "form-control input-sm p-2", placeholder: "Business_name"%>
            <div>If you don't have business name just write your name</div>
        </div>
        <div class="form-group p-3">
            <%=f.text_area :uniqueness_comment, class: "form-control ", placeholder: "Write a brief description how your service is unique. Maximum 50 characters"%>
            <div>Write a brief decription of how your service is unique.</div>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: "btn btn-success mt-2", :disabled=>true %>
        </div>
      <%end%>


    </div>

  </div>
