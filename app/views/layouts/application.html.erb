<!DOCTYPE html>
<html>
  <head>
    <title>Taftapro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,400i,700,800|Varela+Round|Righteous" rel="stylesheet">
  
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_include_tag 'jquery.geocomplete' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% flash.each do |message_type,message| %>
      <%=content_tag( :div, message ,class:"alert alert-#{message_type} text-center m-0")%>
    <%end%>

    <%= yield %>

  </body>
</html>

