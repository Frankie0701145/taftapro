

<div class="container my-5 py-5">

  <div class="row offset-1 py-4">

    <% if @project.debit_balance <= 0 %>
      <div class="col-12">
        <h3>What is the current status of your <%=@request.service%> at TaftaPro?</h3>
      </div>

      <div class="col-12 px-5">

              <%=form_for(@project, url: project_path(params[:id])) do |f| %>

                    <div class="form-check p-4">
                      <%=f.radio_button :status, "started", class: "form-check-input"%>
                      <h5><%=f.label    :status,  "Started", :value => 'started',class:"form-check-label"%></h5>
                    </div>

                    <div class="form-check p-4">
                      <%=f.radio_button :status, "in progress", class: "form-check-input"%>
                      <h5><%=f.label    :status, "In progress", :value => 'in progress', class: "form-check-label"%></h5>
                    </div>

                    <div class="form-check p-4">
                      <%=f.radio_button :status, "finished", class: "form-check-input"%>
                      <h5><%=f.label    :status, "Finished", :value => 'Finished', class: "form-check-label"%> </h5>
                    </div>
                    <%= f.submit "Save", class: "btn btn-lg btn-success mt-2"%>
              <%end%>



      </div>
    <% else %>

      <div class="col-12">
        <h5>Make Payment please so that you can processed. Below are different payment options.</h5>
      </div>

      <div class="card m-3 col-3" style="width: 18rem;">
        <%= image_tag("pesapal.jpeg", width:"120px", height:"120px", class:"card-img-top p-3", alt: "PesaPal") %>

          <div class="card-body">
            <%=link_to "PesaPal", pesapal_payment_path(@project.id) , class: "btn btn-bg btn-danger"%>
          </div>
      </div>
      <div class="card m-3 col-3" style="width: 18rem;">
        <%= image_tag("mpesa.jpeg", width:"120px", height:"120px", class:"card-img-top p-3", alt: "PesaPal") %>

          <div class="card-body">
            <%=link_to "Mpesa", "#" , class: "btn btn-bg btn-success"%>
          </div>
      </div>

    <% end %>
  </div>

</div>
