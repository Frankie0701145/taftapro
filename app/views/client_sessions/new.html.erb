<div class="container">

  <div class="row mt-4 pt-5">

    <div class="col-6 mx-auto border border-white shadow-lg p-4 bg-white rounded mt-4">

      <h3 class="text-center">Log In</h3>

      <%=form_for(:client_session, url:client_login_path, class:"p-4") do|f|%>

          <div class="form_group">
            <%=f.label :email%>
            <%=f.email_field :email, class:"form-control"%>
          </div>

          <div class="form_group">
            <%=f.label :password%>
            <%=f.password_field :password, class:"form-control" %>
          </div>

          <%=f.submit "Log In", class:"btn btn-info btn-block mt-2"%>

      <%end%>
      <p class="mt-2">Forgot Password? <%= link_to "Forgot Password", new_client_password_reset_path%></p>
      <p class="mt-2">New user? <%= link_to "Sign up now!", signup_path %></p>

    </div>

  </div>

</div>
