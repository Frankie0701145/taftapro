<% if question.type = "text_field" %>
	<%= f.text_field :answer, :required => true %>
<% elsif question.type = "text_area" %>
	<%= f.text_area :answer, :required => true %>
<% elsif question.type = "date_field" %>
	<%= f.date_field :answer, :required => true %>
<% elsif question.type = "email_field" %>
	<%= f.email_field :answer, :required => true %>
<% elsif question.type = "radio" %>
	<%= f.text_field :answer, :required => true %>
<% elsif question.type = "radio_and_text" %>
	<%= f.text_field :answer, :required => true %>
<% end %>

